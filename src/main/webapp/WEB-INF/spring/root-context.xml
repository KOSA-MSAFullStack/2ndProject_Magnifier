<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mybatis-spring="http://mybatis.org/schema/mybatis-spring"
	xsi:schemaLocation="http://mybatis.org/schema/mybatis-spring http://mybatis.org/schema/mybatis-spring-1.2.xsd
        http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">


	<!-- Root Context: 프로젝트 전체에서 공유하는 주요 자원(데이터베이스 연결, 공통 Bean 등)을 등록하는 설정 파일입니다. 
		(Servlet 설정이 아닌 공통 설정을 여기에 작성) -->


	<!-- [1] HikariCP 커넥션 풀 설정 객체 -->
	<!-- 데이터베이스 접속에 쓸 드라이버, URL, 계정정보를 설정합니다. -->
	<bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="driverClassName"
			value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"></property>
		<property name="jdbcUrl"
			value="jdbc:log4jdbc:oracle:thin:@localhost:1521/xepdb1"></property>
		<property name="username" value="zoomin"></property>
		<property name="password" value="zoomin"></property>
	</bean>


	<!-- [2] HikariCP 데이터소스(커넥션 풀) 빈 등록 -->
	<!-- 위의 hikariConfig를 이용해 실제 DB와 커넥션풀로 연결하는 DataSource 빈입니다. -->
	<bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource"
		destroy-method="close">
		<constructor-arg ref="hikariConfig">
		</constructor-arg>
	</bean>

	<!-- [3] MyBatis SqlSessionFactory 설정 -->
	<bean id="SqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
        <property name="mapperLocations" value="classpath:/com/magnifier/**/mapper/*.xml"/>
	</bean>

	<!-- [4] Mapper 자동 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.magnifier"/>
		<!-- <property name="basePackage" value="com.magnifier.**.mapper"/> -->

		<!-- annotationClass: Mapper 스캐너는 com.magnifier 전체를 훑어보더라도 정확히 `@Mapper`가 붙은 인터페이스만을 골라서 Bean으로 생성-->
        <property name="annotationClass" value="org.apache.ibatis.annotations.Mapper"/>
        <property name="sqlSessionFactoryBeanName" value="SqlSessionFactory"/>
    </bean>

	<!-- [5] 서비스 컴포넌트 스캔 -->
	<context:component-scan base-package="com.magnifier"/>
	<!-- <context:component-scan base-package="com.magnifier.**.service"/> -->
</beans>